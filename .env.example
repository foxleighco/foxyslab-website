# YouTube API Key (get from https://console.cloud.google.com/)
YOUTUBE_API_KEY=

# Vercel Feature Flags (required for Vercel Toolbar integration)
# Generate with: node -e "console.log(crypto.randomBytes(32).toString('base64url'))"
FLAGS_SECRET=
FLAG_BLOG=false
FLAG_NEWSLETTER=false

# Optional: Analytics
NEXT_PUBLIC_GA_ID=

# Postmark (for contact form email sending)
POSTMARK_API_KEY=
POSTMARK_FROM=no-reply@yourdomain.com
POSTMARK_TO=you@yourdomain.com

# Sentry (for error tracking and performance monitoring)
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=